<div class="container">
  <div class="row">
    <div class= "col-md-12 col-md-offset-0 col-sm-8 col-sm-offset-2">
      <hr>
      <% if signed_in? %>
        <h3>Add a review:</h3>
        <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
          <p>
            <%= f.label :body, "Comments" %><br>
            <%= f.text_area :body %>
          </p>

          <p>
            <div class="rating"></div>
          </p>

          <p>
            <%= f.submit "Submit" %>
          </p>
        <% end %>
      <% end %>
    </div> <!-- end col -->
  </div> <!-- end row -->
</div> <!-- end container -->
