<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="col-sm-12 col-lg-6 col-lg-offset-3">

      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class:"form-control", placeholder: "Enter Product Name" %>
      </div>
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, class:"form-control", placeholder: "Enter Product Description" %>
      </div>
      <div class="form-group">
        <%= f.label :image_url %><br>
        <%= f.text_field :image_url, class:"form-control", placeholder: "Enter Image Url" %>
      </div>
      <div class="form-group">
        <%= f.label :colour %><br>
        <%= f.text_field :colour, class:"form-control", placeholder: "Enter Product Colour" %>
      </div>
      <div class="form-group">
        <%= f.label :price %><br>
        <%= f.text_field :price, type:"number", placeholder:"199.00", class:"form-control" %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div> <!-- end col -->
  </div> <!-- end container -->

<% end %>
